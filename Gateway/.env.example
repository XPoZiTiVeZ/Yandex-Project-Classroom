# Lessons
LESSONS_PORT=50053
LESSONS_ADDRESS=lessons
LESSONS_ENABLED=true


# Tasks
TASKS_PORT=50054
TASKS_ADDRESS=tasks
TASKS_ENABLED=true


# Chat
CHAT_PORT=50055
CHAT_ADDRESS=chat
