

# Nginx
NGINX_PORT=80


# Postgres
POSTGRES_DB=classroom
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_URL="postgres://postgres:password@postgres:5432/classroom?sslmode=disable"


# Redis
REDIS_PORT=6379
# REDIS_PASSWORD=1324
REDIS_URL="redis://redis:6379/0"


# Kafka
KAFKA_PORT=9092
